{{ form_start(form) }}
    {# {{ form_widget(form) }} #}
    {% if is_granted('ROLE_ADMIN') %}
    {% endif %}
    {% set afficheDiv = "none" %}
    {% if form.vars.value.IdUser %}
        {% set afficheDiv = "block" %}
    {% endif %}
    {{ form_row(form.title, { 'attr': {  class: 'form-control col-12'} }) }}
    <div class="form-row">
        <div class="col">
            {{ form_row(form.start,     { 'attr': {  class: 'form-control'} }) }}
        </div>
        <div class="col">
            {{ form_row(form.end,       { 'attr': {  class: 'form-control'} }) }}
        </div>
    </div>
    <div class="form-row mt-3" style= "display:{{ afficheDiv }};">
        <div class="col" style="background-color: #EEF2F6; font-weight: 600;">
            {{ form_row(form.isConfirmed, { 'attr': {  class: 'form-control'} }) }}
        </div>
    </div>
    <div class="form-row mt-3" style= "display:{% if afficheDiv == "none" %} block {% else %} none {% endif %};">
        <div class="col" style="background-color: #EEF2F6; font-weight: 600;">
            {{ form_row(form.isFree, { 'attr': {  class: 'form-control'} }) }}
        </div>
    </div>
    <div class="form-group  mt-3">
        {{ form_row(form.description, { 'attr': {  class: 'form-control form-control-sm'} }) }}
    </div>
    <div class="form-group" {% if is_granted('ROLE_ADMIN') %} style= "display:none;" {% else %} style= "display:none;" {% endif %} >
        {# {{ form_row(form.iduser) }} #}
        {# {{ form_row(form.id) }} #}
    </div> 
    <div class="text-center">
        <button class="btn btn-success">{{ button_label|default('Enregistrer') }}</button>  
    </div> 
    {{ form_end(form, {'render_rest': true}) }}
{{ form_end(form) }}